#!/bin/bash

# LinkVault Bot Setup Script
# Automated installation and configuration

set -e

echo "================================="
echo "üîê LinkVault Bot Setup"
echo "================================="
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if running as root
if [ "$EUID" -eq 0 ]; then 
    echo -e "${RED}‚ùå Please do not run this script as root${NC}"
    exit 1
fi

# Check Python version
echo -e "${YELLOW}üìã Checking Python version...${NC}"
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}‚ùå Python 3 is not installed${NC}"
    echo "Please install Python 3.9 or higher"
    exit 1
fi

PYTHON_VERSION=$(python3 -c 'import sys; print(".".join(map(str, sys.version_info[:2])))')
echo -e "${GREEN}‚úÖ Python $PYTHON_VERSION found${NC}"

# Check pip
echo -e "${YELLOW}üìã Checking pip...${NC}"
if ! command -v pip3 &> /dev/null; then
    echo -e "${RED}‚ùå pip3 is not installed${NC}"
    echo "Please install pip3"
    exit 1
fi
echo -e "${GREEN}‚úÖ pip3 found${NC}"

# Create virtual environment
echo -e "${YELLOW}üîß Creating virtual environment...${NC}"
python3 -m venv venv
source venv/bin/activate
echo -e "${GREEN}‚úÖ Virtual environment created${NC}"

# Install dependencies
echo -e "${YELLOW}üì¶ Installing dependencies...${NC}"
pip install --upgrade pip
pip install -r requirements.txt
echo -e "${GREEN}‚úÖ Dependencies installed${NC}"

# Create .env file if it doesn't exist
if [ ! -f .env ]; then
    echo -e "${YELLOW}‚öôÔ∏è  Creating .env file...${NC}"
    cp .env.example .env
    echo -e "${GREEN}‚úÖ .env file created${NC}"
    echo ""
    echo -e "${YELLOW}‚ö†Ô∏è  IMPORTANT: Please edit .env file with your credentials:${NC}"
    echo "   nano .env"
    echo ""
else
    echo -e "${GREEN}‚úÖ .env file already exists${NC}"
fi

# Create logs directory
mkdir -p logs
echo -e "${GREEN}‚úÖ Logs directory created${NC}"

echo ""
echo "================================="
echo -e "${GREEN}‚úÖ Setup completed successfully!${NC}"
echo "================================="
echo ""
echo "Next steps:"
echo "1. Edit .env file with your credentials:"
echo "   nano .env"
echo ""
echo "2. Run the bot:"
echo "   source venv/bin/activate"
echo "   python main.py"
echo ""
echo "3. Or use systemd (recommended for VPS):"
echo "   sudo cp linkvault.service /etc/systemd/system/"
echo "   sudo systemctl daemon-reload"
echo "   sudo systemctl enable linkvault"
echo "   sudo systemctl start linkvault"
echo ""
echo "4. Or use Docker:"
echo "   docker-compose up -d"
echo ""
echo "================================="
